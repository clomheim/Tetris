package view;

/**
 * This class represents the Pause state of the game.
 * 
 * @author Doug Lomheim
 * @version 0.1.20130608
 */
public class PauseState
{
/**
 * The paused state of the game.
 */
  private boolean my_paused;
  
  /**
   * Initializes the field.
   */
  public PauseState()
  {
    my_paused = false;
  }
  
  /**
   * Checks to see if the game is paused.
   * 
   * @return True if the game is paused, false otherwise.
   */
  public boolean isPaused()
  {
    return my_paused;
  }
  
  /**
   * Sets the pause state of the game.
   * 
   * @param the_pause The pause state to enter.
   */
  public void setPauseState(final boolean the_pause)
  {
    my_paused = the_pause;
  }
}
