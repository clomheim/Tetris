import javax.swing.JLabel;

/**
 * @author Doug Lomheim
 * @version 0.1.20130530
 */
public class ScoreLabel extends JLabel
{
  public ScoreLabel()
  {
    super();
    StringBuilder sb = new StringBuilder();
    sb.append("<html>Score: \n");
    sb.append(0);
    sb.append("<br>Level: \n");
    sb.append(0);
    sb.append("<br>Lines Cleared: \n");
    sb.append(0);
    sb.append("</html>");
    setText(sb.toString());
  }
}
